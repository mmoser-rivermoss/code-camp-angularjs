extends auth

block auth
  form.signup.form-horizontal(action="/users", method="post")
    .control-group
      label.control-label(for='firstName') First Name
      .controls
        input#name(type='text', name="firstName", placeholder='First name', value=user.firstName)

    .control-group
      label.control-label(for='lastName') Last Name
      .controls
        input#name(type='text', name="lastName", placeholder='Last name', value=user.lastName)        

    .control-group
      label.control-label(for='email') Email
      .controls
        input#email(type='text', name="email", placeholder='Email', value=user.email)

    .control-group
      label.control-label(for='password') Password
      .controls
        input#password(type='password', name="password", placeholder='Password')

    .form-actions
      button.btn.btn-primary(type='submit') Sign up
      &nbsp;
      | or&nbsp;
      a.show-login(href="/signin") login
